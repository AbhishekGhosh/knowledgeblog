def do_checkout( config, block_kblog ):
    """Checks out the required kblog plugins"""
    for plugin in config:

        if len( plugin ) >= 3 and plugin[ 2 ] == "kblog" and block_kblog:
            print( "Skipping kblog produced plugin:" + plugin[ 0 ] )
            continue
        
        if os.path.exists( plugin[ 0 ] ):
            print( "Checking for update: %s" % (plugin[0]) )
            output = Popen( ["svn",
                                 "switch", "%s%s/tags/%s" %
                                 (basesvn, plugin[0], plugin[1]),
                                 plugin[ 0 ]
                                 ],stdout=PIPE).communicate()[0]
            print( output )
        else:
            print( "Checking out: %s" % (plugin[0]) )
            output = Popen( ["svn",
                             "checkout", "%s%s/tags/%s" %
                             (basesvn, plugin[0], plugin[1]),
                             plugin[ 0 ]
                             ],
                            stdout=PIPE).communicate()[0]
            print( output )

def do_download():
    """Downloads the required plugins from download.wordpress.org"""
    url_base = config['root_url']
    for plugin in config['external_dependencies']:
        url = url_base + plugin + '.zip'
        req = urllib2.urlopen(url)



if __name__ == '__main__':
    import getopt
    opts,args = getopt.getopt(sys.argv[1:], 'h',
                              ['no-kblog'])
    block_kblog = False
    
    for o, v in opts:
        print( o, v )
        if o == "--no-kblog":
            block_kblog = True

